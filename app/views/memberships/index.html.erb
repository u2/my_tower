<h1>Listing memberships</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user_id %></td>
        <td><%= membership.role %></td>
        <td><%= link_to 'Show', team_membership_path(@team, membership) %></td>
        <% if team_admin? %>
        <td><%= link_to 'Edit', edit_team_membership_path(@team, membership) %></td>
        <td><%= link_to 'Destroy', team_membership_path(@team, membership), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_team_membership_path(@team) %>
